<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/img_forum_question"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:contentDescription="@string/cd_forum_question"
        android:src="@drawable/ic_forum_question"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_forum_question"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/img_forum_question"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_forum_question_num_replies"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/lbl_forum_question_num_replies"
        app:layout_constraintTop_toBottomOf="@+id/tv_forum_question" />

    <TextView
        android:id="@+id/lbl_forum_question_num_replies"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lbl_forum_question_num_replies"
        android:labelFor="@+id/tv_forum_question_num_replies"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/img_forum_question"
        app:layout_constraintTop_toBottomOf="@+id/tv_forum_question" />

</androidx.constraintlayout.widget.ConstraintLayout>